<div class="well text-center">
<h2>Question : <%= @question.question %> </h2>
<p><b>Answer :  </b><%= @question.answer %> </p>
<p><b>Categories :</b> <%= raw @question.tag_list.map{|t| link_to t, tag_path(t)}.join(', ')%></p>
<hr>
<%= link_to "Edit", edit_myquestion_path(@question), :class => 'btn btn-default'%>
<%= link_to "Delete", myquestion_path(@question),method: :delete,data: {confirm: "Are You Sure?"}, :class => 'btn btn-danger'%>
<%= link_to "Back" , myquestions_path, :class => 'btn btn-default text-center'%>
</div>


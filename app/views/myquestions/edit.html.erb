<div class="well">
<h1>Edit Question</h1>

<%=form_for :question,  method: :patch do |f| %>

<% if @question.errors.full_messages.any? %>
  <% @question.errors.full_messages.each do |error_message| %>
    <div class="alert alert-danger"><%= error_message %></div>
  <% end %>
<% end %>
<p>
  <%=f.label :question %><br>
  <%=f.text_field(:question, {:class => 'form-control'})%>
</p>

<p>
  <%= f.label :answer %><br>
  <%= f.text_area(:answer, {:class => 'form-control'})%>
</p>
  <p>
      <%= f.label :tag_list,"Categories (Seperated by Commas)" %><br/>
      <%= f.text_field :tag_list, class: "form-control"%>
  </p>

<p>
  <%= f.submit({:class => 'btn btn-primary'})%>
</p>

<% end %>
</div>
</div>

<div class='well text-center'>
<% @question.each do |question| %>
<div class='well text-center'>
  <h2><%= question.question %></h2>
  <hr>
  <%= form_tag round_path(question),  remote: true do %>
    <div class="form-group">

      <%= text_field_tag(:answer, nil, class: "form-control", placeholder: "Answer of question", autofocus: true )%></br>
      <%= button_tag "Submit", class: 'btn btn-default text-center' %>

      </div>
</div>
<% end %>
<% end %>
</div>

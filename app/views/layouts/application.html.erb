 <!DOCTYPE html>
<html>
  <head>
    <title>Triviaa</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag  'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'  %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-expand-md navbar-dark bg-dark navbar-fixed-top ">
          <a class="navbar-brand" href="">Shadow Health Trivia</a>
          <div class="collapse navbar-collapse container-fluid" id="navbarsExampleDefault">
            <ul class="nav navbar-nav">

              <li class="nav-item"><%= link_to "Home", welcome_path%></li>
            </ul>
              <% if user_signed_in?%>
            <ul class="nav navbar-nav">
              <li class="nav-item"><%= link_to "Play Triviaa", questions_path%></li>
            </ul>
            <!-- <ul class="nav navbar-nav">
              <li class="nav-item"><%= link_to "Play Quick 10", rounds_path%></li>
            </ul> -->
            <ul class="nav navbar-nav">
              <li class=""><%= link_to "Create a Question", new_myquestion_path%></li>
            </ul>
            <ul class="nav navbar-nav">
              <li class=""><%= link_to "Categories", tags_path%></li>
            </ul>
            <ul class="nav navbar-nav">
              <li class=""><%= link_to "My Questions", myquestions_path%></li>
            </ul>
            <ul class="nav navbar-nav">
              <li class=""><%= link_to "View High Scores", score_path%></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class=""><%= link_to "Sign Out", destroy_user_session_path, :method => 'delete'%></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class=""><%= link_to "#{current_user.name}'s Profile", edit_user_registration_path(current_user.id)%></li>
            </ul>

            <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li class=""><%= link_to "Log In / Sign Up", user_session_path%></li>
            </ul>
            <% end %>

          </div>
        </nav>
        <% if user_signed_in?%>
        <div class="inline">
        <p class="text-right"><%=current_user.name%>'s Score : <%=current_user.score%> (<%= current_user.reputation_for(:votes).to_i %>)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
       </div>
       <% end %>
        <div class="container">
    <%= yield %>
   
  </div>
  <%= render 'layouts/footer' %>
  </body>
</html>
